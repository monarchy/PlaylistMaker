<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:buttonCornerRadius">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="RoundedCornersOfImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>
    <style name="toolbar_style" parent="header_style">
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="navigationIconTint">@color/placeholder_text</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="player_screen_characteristics_names_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="player_screen_characteristics_style">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ModeSettingsScreen">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TopText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="ArrowBack">
        <item name="tint">@color/black</item>
    </style>
    <style name="tablayoutTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/little_size_text</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="activeTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="inactiveTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="bottom_navigation">
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="background">@drawable/bottom_nav_background</item>
        <item name="itemTextAppearanceActive">@style/activeTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/inactiveTextStyle</item>
    </style>

    <style name="fragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="headerText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/placeholder_text</item>
    </style>
    <style name="toolbarStyle">
        <item name="android:titleTextAppearance">@style/headerText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="trackNamePlayer">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/player_track_name</item>
    </style>

    <style name="littleInfo">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/little_size_text</item>
    </style>

    <style name="songInfoLeft">
        <item name="android:textSize">@dimen/bottom_info_size</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="songInfoRight">
        <item name="android:textSize">@dimen/bottom_info_size</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="searchBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/search_bar_height</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="searchBarEditText">
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLength">35</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search_button</item>
        <item name="drawableTint">@color/grey</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="searchCross">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="tint">@color/grey</item>
        <item name="android:src">@drawable/cross</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="youSearchedIt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/searchedIt</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_you_searched_it</item>
        <item name="android:textColor">@color/placeholder_text</item>
    </style>

    <style name="buttonSearchActivity">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@drawable/rounded_for_update_search</item>
        <item name="android:text">@string/update</item>
    </style>

    <style name="errorPlaceholder">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/placeholder_vertical_orientation</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="statusPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="statusTextPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="progressBar">
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:layout_width">@dimen/progress_bar_size</item>
        <item name="android:layout_height">@dimen/progress_bar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">248dp</item>
    </style>

    <style name="switchDarkTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_button_height</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="trackTint">@color/light_grey</item>
        <item name="thumbTint">@color/grey</item>
        <item name="android:thumb">@drawable/knob</item>
    </style>

    <style name="materialTextViewSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_button_height</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/default_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/grey</item>
        <item name="android:paddingStart">@dimen/padding_start_settings</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_settings</item>
    </style>
    <style name="tablayoutStyle">
        <item name="tabTextColor">@color/white_or_black</item>
        <item name="tabIndicatorColor">@color/white_or_black</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <dimen name="toolbar_height">56dp</dimen>
    <dimen name="header_text_size">26sp</dimen>
    <dimen name="player_track_name">22sp</dimen>
    <dimen name="bottom_info_size">13sp</dimen>
    <dimen name="search_bar_height">42dp</dimen>
    <dimen name="default_size">16sp</dimen>
    <dimen name="searchedIt">52dp</dimen>
    <dimen name="size_you_searched_it">19sp</dimen>
    <dimen name="placeholder_vertical_orientation">210dp</dimen>
    <dimen name="progress_bar_size">44dp</dimen>
    <dimen name="setting_button_height">61dp</dimen>
    <dimen name="padding_start_settings">16dp</dimen>
    <dimen name="padding_vertical_settings">21dp</dimen>
    <string name="update">Обновить</string>
</resources>
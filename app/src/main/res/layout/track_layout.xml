<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/track_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        style="@style/trackLayoutCoverStyle"
        tools:src="@drawable/track_placeholder" />

    <TextView
        style="@style/recItemTitle"
        android:id="@+id/track_name"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Очень длинное название трека, которое будет обрезано и заменено многоточием" />

    <LinearLayout style="@style/trackLayoutLinearDescription">

        <TextView
            android:id="@+id/executor"
            style="@style/trackLayoutDescription"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="текст" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/trackLayoutIcons"
            android:src="@drawable/point" />

        <TextView
            android:id="@+id/duration"
            style="@style/trackLayoutDescription"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="текст" />
    </LinearLayout>

    <ImageView
        android:id="@+id/trackLayoutForward"
        android:src="@drawable/arrow_forward"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="20dp"
        style="@style/trackLayoutIcons" />

</FrameLayout>
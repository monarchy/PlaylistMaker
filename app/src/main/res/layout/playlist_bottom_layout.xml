<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_layout"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        style="@style/playlistLayoutCoverStyle"
        tools:src="@drawable/track_placeholder" />

    <TextView
        android:id="@+id/playlist_behavior_name"
        style="@style/recItemTitle"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="текст" />

    <LinearLayout style="@style/trackLayoutLinearDescription">

        <TextView
            android:id="@+id/playlist_tracks_count"
            style="@style/trackLayoutDescription"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="10 треков" />
    </LinearLayout>
</FrameLayout>